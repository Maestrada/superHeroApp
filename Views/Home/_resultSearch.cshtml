@model List<superHeroApp.Models.HeroModel>
@{
    Layout = "";
    string message = this.ViewBag.ExtraMessage;
}

@if (Model.Count > 0)
{
    <h3>Search Results <i class="fa fa-user-secret"></i></h3>

    <div class="row">

        @foreach(var item in Model)
        {
        <div class="col-lg-12">
            <!-- Tabs with icons on Card -->
            <div class="card card-nav-tabs">
                <div class="card-header card-header-primary">
                    <!-- colors: "header-primary", "header-info", "header-success", "header-warning", "header-danger" -->
                    <div class="row">
                        <div class="col-lg-2 col-sm-3"> <img src="@item.Image.Url" alt="@item.Name" class="rounded-circle img-fluid"></div>
                        <div class="col-lg-4 col-sm-9"><b>Name:</b> @item.Name</div>
                        <div class="col-lg-4 col-sm-12"><b>Gender:</b> @item.Appearance.Gender</div>
                        <div class="col-lg-2 col-sm-12">
                            <button class="btn btn-white  btn-raised btn-fab btn-round bt-show-more" data-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Show more" data-container="body">
                                <i class="fa fa-times"></i>
                            </button>
                            <button class="btn btn-white btn-raised btn-fab btn-round bt-show-less" data-id="@item.Id" data-toggle="tooltip" data-placement="bottom" title="Show less" data-container="body" style="display:none">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body" data-cardid="@item.Id" style="display:none">
                    <h2>Basic Info</h2>
                    <div class="row">
                        <div class="col-lg-4 col-sm-12">
                            <h3>Full Name:</h3>
                            @item.Biography.FullName
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <h3>Alter Egos:</h3>
                            @item.Biography.AlterEgos
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <h3>Aliases:</h3>
                            @if (item.Biography.Aliases.Count > 0)
                            {
                               @( string.Join(", ", item.Biography.Aliases))
                               
                            }
                            else
                            {
                                <span> - </span>
                            }
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <h3>Place Of Birth:</h3>
                            @item.Biography.PlaceOfBirth
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <h3>First Appearance:</h3>
                            @item.Biography.FirstAppearance
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <h3>Publisher:</h3>
                            @item.Biography.Publisher
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Tabs with icons on Card -->
        </div>
        }


    </div>
}
else
{
    if (message.IsEmpty())
    {
        <h3>No Hero Was Found <i class="fa fa-user-times"></i></h3>
    }
    else
    {
        <h3>An error was Ocurred @message</h3>
    }
}



