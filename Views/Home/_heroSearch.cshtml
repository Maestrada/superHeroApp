@model superHeroApp.Models.HeroModel
    @{
        ViewBag.Title = "Hero Details";
        string lastSearch = this.ViewBag.LastSearch;
    }
<div class="row">
    <div class="col-md-12">
        <h2>Looking for your favorite hero</h2>
        <div class="row">
            <div class="col-lg-10 col-sm-12">
                <input type="text" class="form-control input-search" placeholder="Search" val>
            </div>
            <div class="col-lg-2 col-sm-12">
                <button class="btn btn-primary btn-raised btn-fab btn-round bt-search" data-toggle="tooltip" data-placement="bottom" title="Search" data-container="body">
                    <i class="material-icons">search</i>
                </button>
                <button class="btn btn-rose btn-raised btn-fab btn-round bt-clear" data-toggle="tooltip" data-placement="bottom" title="Clear search bar and results" data-container="body">
                    <i class="fa fa-times"></i>
                </button>
            </div>
            <div class="col-lg-12 alert-div" style="display:none">
                <div class="alert alert-warning">
                    <div class="container">
                        <div class="alert-icon">
                            <i class="material-icons">warning</i>
                        </div>
                        <b>Warning:</b> Please enter a hero to search!
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-12"><img src="@Model.Image.Url" alt="@Model.Name" onerror="this.onerror=null;this.src='https://images.unsplash.com/photo-1594322436404-5a0526db4d13?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=715&q=80%20715w';" class="rounded-circle img-fluid"></div>
    <div class="col-lg-9  col-sm-12">
        <!-- Tabs on Plain Card -->
        <div class="card card-nav-tabs card-plain">
            <div class="card-header card-header-danger">
                <!-- colors: "header-primary", "header-info", "header-success", "header-warning", "header-danger" -->
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#biography" data-toggle="tab">Biography</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#powerstats" data-toggle="tab">Power stats</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#appearance" data-toggle="tab">Appearance</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#connections" data-toggle="tab">Connections</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#work" data-toggle="tab">Work</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body ">
                <div class="tab-content text-center">
                    <div class="tab-pane active" id="biography">
                        <div class="row">
                            <div class="col-lg-4 col-sm-12">
                                <h3>Full Name:</h3>
                                @(Model.Biography.FullName.IsEmpty()? Model.Name: Model.Biography.FullName)
                                <p style="text-transform:capitalize;">(@Model.Biography.Alignment)</p>
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Alter Egos:</h3>
                                @Model.Biography.AlterEgos
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Aliases:</h3>
                                @if (Model.Biography.Aliases.Count > 0)
                                {
                                    @( string.Join(", ", Model.Biography.Aliases))

                                }
                                else
                                {
                                    <span> - </span>
                                }
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Place Of Birth:</h3>
                                @Model.Biography.PlaceOfBirth
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>First Appearance:</h3>
                                @Model.Biography.FirstAppearance
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Publisher:</h3>
                                @(Model.Biography.Publisher=="null"?"-": Model.Biography.Publisher)
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="powerstats">
                        <div class="row">
                            <div class="col-lg-4 col-sm-12">
                                <h3>Stringelligence:</h3>
                                @(Model.PowerStats.stringelligence.IsEmpty() || Model.PowerStats.stringelligence == "null" ? " - ": Model.PowerStats.stringelligence )
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Strength:</h3>
                                @(Model.PowerStats.Strength.IsEmpty() || Model.PowerStats.Strength == "null" ? " - ": Model.PowerStats.Strength )
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Speed:</h3>
                                @(Model.PowerStats.Speed.IsEmpty() || Model.PowerStats.Speed == "null" ? " - ": Model.PowerStats.Speed )
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Durability:</h3>
                                @(Model.PowerStats.Durability.IsEmpty() || Model.PowerStats.Durability == "null" ? " - ": Model.PowerStats.Durability )
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Power:</h3>
                                @(Model.PowerStats.Power.IsEmpty() || Model.PowerStats.Power == "null" ? " - ": Model.PowerStats.Power )
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Combat:</h3>
                                @(Model.PowerStats.Combat.IsEmpty() || Model.PowerStats.Combat == "null" ? " - ": Model.PowerStats.Combat )
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="appearance">
                        <div class="row">
                            <div class="col-lg-4 col-sm-12">
                                <h3>Gender:</h3>
                                @Model.Appearance.Gender
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Race:</h3>
                                @Model.Appearance.Race
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Height:</h3>
                                @if (Model.Appearance.Height.Count > 0)
                                {
                                    @( string.Join(", ", Model.Appearance.Height))

                                }
                                else
                                {
                                    <span> - </span>
                                }
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Weight:</h3>
                                @if (Model.Appearance.Weight.Count > 0)
                                {
                                    @( string.Join(", ", Model.Appearance.Weight))

                                }
                                else
                                {
                                    <span> - </span>
                                }
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Eye Color:</h3>
                                @Model.Appearance.EyeColor
                            </div>
                            <div class="col-lg-4 col-sm-12">
                                <h3>Hair Color:</h3>
                                @Model.Appearance.HairColor
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="connections">
                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <h3>Group Affiliation:</h3>
                                @Model.Connections.GroupAffiliation
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <h3>Relatives:</h3>
                                @Model.Connections.Relatives
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="work">
                        <div class="row">
                            <div class="col-lg-6 col-sm-12">
                                <h3>Occupation:</h3>
                                @Model.Work.Occupation
                            </div>
                            <div class="col-lg-6 col-sm-12">
                                <h3>Race:</h3>
                                @Model.Work.Base
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Tabs on plain Card -->
    </div>
    <div class="col-lg-12 text-center mx-auto">
        <a href="/?search=@lastSearch" class="btn btn-link btn-primary btn-lg " style="font-size:large"><i class="fa fa-arrow-circle-left"></i>  Go back</a> 
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/appScript/heroSearch.js"></script> 
}
